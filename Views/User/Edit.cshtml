@using IMS.DAL.PrimaryDBContext;
@model User;

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h2 class="mb-0">Edit User</h2>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="UserId" />
            <div class="mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="UserPassword" class="form-label"></label>
                <input asp-for="UserPassword" type="text" class="form-control" placeholder="Enter new password (leave blank to keep unchanged)" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check form-switch">
                
                    <input class="form-check-input" type="checkbox" id="isEnableSwitch"
                       asp-for="IsEnabled" />
               
                @* <input asp-for="IsEnabled" class="form-check-input" /> *@
                <label asp-for="IsEnabled" class="form-check-label"></label>
                <span asp-validation-for="IsEnabled" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check form-switch">
                <input class="form-check-input" type="checkbox" asp-for="IsAdmin" id="isAdminSwitch" />
                <label asp-for="IsAdmin" class="form-check-label"></label>
                <span asp-validation-for="IsAdmin" class="text-danger"></span>
            </div>
       
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="GetAllUsers" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}