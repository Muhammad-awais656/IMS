@using IMS.DAL.PrimaryDBContext;
@model IMS.DAL.PrimaryDBContext.AdminCategory;

@{
    ViewData["Title"] = "Delete Admin Category";
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white py-3">
        <div class="d-flex align-items-center">
            <i class="fa fa-exclamation-triangle me-2"></i>
            <h4 class="mb-0">Delete Admin Category</h4>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <i class="fa fa-exclamation-triangle me-2"></i>
            <div>
                <strong>Warning!</strong> Are you sure you want to delete this category? This action cannot be undone.
            </div>
        </div>

        <div class="card bg-light">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fa fa-info-circle me-2 text-primary"></i>Category Details
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Category Name</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-folder me-1 text-primary"></i>@Html.DisplayFor(model => model.CategoryName)
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Other Adjustments</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-calculator me-1 text-primary"></i>
                            @if (Model.OtherAdjustments.HasValue)
                            {
                                @Html.DisplayFor(model => model.OtherAdjustments)
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </div>
                    </div>
                    <div class="col-12 mb-3">
                        <label class="form-label fw-semibold text-muted">Description</label>
                        <div class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.CategoryDescription))
                            {
                                <i class="fa fa-align-left me-1 text-primary"></i>@Html.DisplayFor(model => model.CategoryDescription)
                            }
                            else
                            {
                                <span class="text-muted">No description provided</span>
                            }
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Status</label>
                        <div class="form-control-plaintext">
                            @if (Model.IsEnabled)
                            {
                                <span class="badge bg-success">
                                    <i class="fa fa-check-circle me-1"></i>Enabled
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="fa fa-times-circle me-1"></i>Disabled
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="CategoryId" />
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                    <i class="fa fa-arrow-left me-1"></i>Back to List
                </a>
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fa fa-trash me-1"></i>Delete Category
                </button>
            </div>
        </form>
    </div>
</div>
