@model IMS.Models.LoginViewModel;

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_SecondLayout.cshtml"; // Or your layout path
}
@* <link href="~/css/dist/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/dist/all.min.css" rel="stylesheet" /> *@
<!-- Bootstrap & FontAwesome -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

<!-- Custom Page Styles -->
<link rel="stylesheet" href="~/css/LoginForm.css" />


<div class="container d-flex justify-content-center align-items-center vh-100">
    
    <div class="card login-card p-4" style="width: 100%; max-width: 400px;">
        <div class="text-center login-header mb-4">
            @* <img src="~/images/IMTradersLogo.png" alt="Logo" class="img-fluid mb-2" style="max-height: auto;" /> *@
            <img src="~/images/zahoortraderslogo.png" alt="Logo" class="img-fluid mb-2" style="max-height: auto;" />
            <h3 class="mb-1" style="color:deeppink; font-family: serif;font-style: italic;">IMS Login</h3>
            <small style="font-weight:bold;color:darkblue;font-style:oblique;">Inventory Management System</small>
        </div>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label" style="font-weight:bold">
                    <i class="fa fa-user"></i> Username
                </label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label" style="font-weight:bold">
                    <i class="fa fa-lock"></i> Password
                </label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Domain" class="form-label" style="font-weight:bold">
                    <i class="fa fa-database"></i> Domain
                </label>
                <select asp-for="Domain" class="form-select">
                   @*  <option value="">-- Select Domain --</option> *@
                    <option value="Shop">Shop</option>
             @*        <option value="Factory">Factory</option> *@
                </select>
                <span asp-validation-for="Domain" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-sign-in-alt"></i> Login
                </button>
            </div>
            <div class="mb-3">
                <p style="text-align:center; color:white;font-weight:bolder;margin:auto;">Powered By AJ CORE Technologies</p>
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger mt-2">@ViewBag.Error</div>
}
