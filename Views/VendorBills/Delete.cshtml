@model IMS.Models.VendorBillViewModel

@{
    ViewData["Title"] = "Delete Vendor Bill";
}

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0 text-center">
                <i class="fa-solid fa-trash me-2"></i>
                Delete Vendor Bill
            </h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <i class="fa-solid fa-exclamation-triangle me-2"></i>
                <strong>Warning!</strong> Are you sure you want to delete this vendor bill? This action cannot be undone.
            </div>

            <div class="row">
                <div class="col-md-6">
                    <h5>Bill Information</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Bill ID:</dt>
                        <dd class="col-sm-8">@Model.BillId</dd>
                        
                        <dt class="col-sm-4">Bill Number:</dt>
                        <dd class="col-sm-8">@Model.BillNumber</dd>
                        
                        <dt class="col-sm-4">Vendor:</dt>
                        <dd class="col-sm-8">@Model.VendorName</dd>
                        
                        <dt class="col-sm-4">Bill Date:</dt>
                        <dd class="col-sm-8">@Model.BillDate.ToString("dd/MM/yyyy")</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h5>Financial Information</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Total Amount:</dt>
                        <dd class="col-sm-8">@Model.TotalAmount.ToString("N3")</dd>
                        
                        <dt class="col-sm-4">Discount Amount:</dt>
                        <dd class="col-sm-8">@Model.DiscountAmount.ToString("N3")</dd>
                        
                        <dt class="col-sm-4">Paid Amount:</dt>
                        <dd class="col-sm-8">@Model.PaidAmount.ToString("N3")</dd>
                        
                        <dt class="col-sm-4">Due Amount:</dt>
                        <dd class="col-sm-8">@Model.DueAmount.ToString("N3")</dd>
                    </dl>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="row mt-3">
                    <div class="col-12">
                        <h5>Description</h5>
                        <p class="text-muted">@Model.Description</p>
                    </div>
                </div>
            }

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="BillId" />
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="fa-solid fa-trash me-2"></i>
                        Delete Bill
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="fa-solid fa-arrow-left me-2"></i>
                        Back to Bills
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
