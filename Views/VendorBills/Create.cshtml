                }
            }
        }

        function addExistingItemToTable(productId, productRangeId, productName, measuringUnitAbbreviation, unitPrice, purchasePrice, quantity, discountAmount, payableAmount) {
            const tbody = document.getElementById('productListBody');
            const row = document.createElement('tr');
            const measuringUnit = measuringUnitAbbreviation && measuringUnitAbbreviation !== 'null' && measuringUnitAbbreviation.trim() !== '' ? measuringUnitAbbreviation : 'N/A';
            row.innerHTML = `
                <td>${measuringUnit}</td>
                <td>${productName}</td>
                <td>$${parseFloat(unitPrice).toFixed(2)}</td>
                <td>$${parseFloat(purchasePrice).toFixed(2)}</td>
                <td>${quantity}</td>
                <td>$${parseFloat(discountAmount).toFixed(2)}</td>
                <td>$${parseFloat(payableAmount).toFixed(2)}</td>
                <td>
                    <button type="button" class="btn btn-sm btn-warning me-1" onclick="editProductRow(this)" title="Edit">
                        <i class="fa-solid fa-edit"></i>
                    </button>
                    <button type="button" class="btn btn-sm btn-danger" onclick="removeProductRow(this)" title="Delete">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                </td>
                <input type="hidden" name="BillItems[${rowIndex}].ProductId" value="${productId}" />
                <input type="hidden" name="BillItems[${rowIndex}].ProductRangeId" value="${productRangeId}" />
                <input type="hidden" name="BillItems[${rowIndex}].ProductSize" value="${measuringUnit}" />
                <input type="hidden" name="BillItems[${rowIndex}].UnitPrice" value="${unitPrice}" />
                <input type="hidden" name="BillItems[${rowIndex}].BillPrice" value="${purchasePrice}" />
                <input type="hidden" name="BillItems[${rowIndex}].Quantity" value="${quantity}" />
                <input type="hidden" name="BillItems[${rowIndex}].DiscountAmount" value="${discountAmount}" />
                <input type="hidden" name="BillItems[${rowIndex}].PayableAmount" value="${payableAmount}" />
            `;
            tbody.appendChild(row);
            rowIndex++;
            updateTotals();
        }

