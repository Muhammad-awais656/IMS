                    var productSize = item.ProductSize ?? "N/A";
                    <text>
                    addExistingItemToTable(@item.ProductId, @item.ProductRangeId, '@item.ProductName', '@Html.Raw(productSize)', @item.UnitPrice, @item.BillPrice, @item.Quantity, @item.DiscountAmount, @item.PayableAmount);
