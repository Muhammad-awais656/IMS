@using IMS.DAL.PrimaryDBContext
@model Employee;



<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Create Employee</h2>
                </div>
                <div class="card-body">
                    <div class="row row-cols-1 row-cols-md-2 row-cols-md-4 g-4 mt-2">

                        <div class="col">
                            <label asp-for="FirstName" class="form-label"> First Name:</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="LastName" class="form-label"> Last Name:</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="PhoneNumber" class="form-label"> Phone Number:</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="col">
                            <label asp-for="Cnic" class="form-label"> CNIC :</label>
                            <input asp-for="Cnic" class="form-control" />
                            <span asp-validation-for="Cnic" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="Address" class="form-label"> Adddress :</label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="Gender" class="form-label"> Gender :</label>
                            @Html.DropDownList("Gender", ViewBag.GenderTypes as IEnumerable<SelectListItem>, "<-- Select Gender -->", new { @class = "form-control scrollable-dropdown" })
                            @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                        </div>
                        <div class="col">
                            <label asp-for="Age" class="form-label"> Age :</label>
                            <input asp-for="Age"  class="form-control" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="JoiningDate" class="form-label"> Joining Date :</label>
                            @Html.TextBox("JoiningDate", null, new { @class = "form-control", type = "date" })
                            @Html.ValidationMessageFor(m => m.JoiningDate, "", new { @class = "text-danger" })
                        </div>
                        <div class="col">
                            <label asp-for="Salary" class="form-label"> Salary :</label>
                            <input asp-for="Salary" class="form-control" />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="HusbandFatherName" class="form-label"> Father/Husband :</label>
                            <input asp-for="HusbandFatherName" class="form-control" />
                            <span asp-validation-for="HusbandFatherName" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="EmailAddress" class="form-label"> Email Address :</label>
                            <input asp-for="EmailAddress" class="form-control" />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="MaritalStatus" class="form-label"> Marital Status :</label>
                            @Html.DropDownList("MaritalStatus", ViewBag.MaritalStatuses as IEnumerable<SelectListItem>, "<-- Select Marital Status -->", new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.MaritalStatus, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="mb-3" style="padding:inherit">
                        <button type="submit" class="btn btn-success">Create</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}