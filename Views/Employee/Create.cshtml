@using IMS.DAL.PrimaryDBContext
@model Employee;

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white py-3">
        <div class="d-flex align-items-center">
            <i class="fa fa-plus-circle me-2"></i>
            <h4 class="mb-0">Create Employee</h4>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Create" novalidate>
            <div class="row">
                <!-- First Name -->
                <div class="col-md-6 mb-4">
                    <div class="form-floating">
                        <input asp-for="FirstName" class="form-control form-control-lg" 
                               placeholder="Enter first name" 
                               required />
                        <label asp-for="FirstName" class="fw-semibold">
                            <i class="fa fa-user me-1 text-primary"></i>First Name
                            <span class="text-danger">*</span>
                        </label>
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                </div>

                <!-- Last Name -->
                <div class="col-md-6 mb-4">
                    <div class="form-floating">
                        <input asp-for="LastName" class="form-control form-control-lg" 
                               placeholder="Enter last name" 
                               required />
                        <label asp-for="LastName" class="fw-semibold">
                            <i class="fa fa-user me-1 text-primary"></i>Last Name
                            <span class="text-danger">*</span>
                        </label>
                    </div>
                    <span asp-validation-for="LastName" class="text-danger small"></span>
                </div>

                <!-- Phone Number -->
                <div class="col-md-6 mb-4">
                    <div class="form-floating">
                        <input asp-for="PhoneNumber" class="form-control form-control-lg" 
                               placeholder="Enter phone number" 
                               required />
                        <label asp-for="PhoneNumber" class="fw-semibold">
                            <i class="fa fa-phone me-1 text-primary"></i>Phone Number
                            <span class="text-danger">*</span>
                        </label>
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>

                <!-- CNIC -->
                <div class="col-md-6 mb-4">
                    <div class="form-floating">
                        <input asp-for="Cnic" class="form-control form-control-lg" 
                               placeholder="Enter CNIC" 
                               required />
                        <label asp-for="Cnic" class="fw-semibold">
                            <i class="fa fa-id-card me-1 text-primary"></i>CNIC
                            <span class="text-danger">*</span>
                        </label>
                    </div>
                    <span asp-validation-for="Cnic" class="text-danger small"></span>
                </div>

                        <!-- Address -->
                        <div class="col-12 mb-4">
                            <label asp-for="Address" class="form-label fw-semibold">
                                <i class="fa fa-map-marker-alt me-1 text-primary"></i>Address
                                <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Address" class="form-control" 
                                      rows="3" 
                                      placeholder="Enter address" 
                                      required></textarea>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                <!-- Gender -->
                <div class="col-md-6 mb-4">
                    <label asp-for="Gender" class="form-label fw-semibold">
                        <i class="fa fa-venus-mars me-1 text-primary"></i>Gender
                        <span class="text-danger">*</span>
                    </label>
                    @Html.DropDownList("Gender", ViewBag.GenderTypes as IEnumerable<SelectListItem>, "-- Select Gender --", new { @class = "form-control form-control-lg", @required = "required" })
                    @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger small" })
                </div>

                <!-- Age -->
                <div class="col-md-6 mb-4">
                    <div class="form-floating">
                        <input asp-for="Age" class="form-control form-control-lg" 
                               type="number" 
                               placeholder="Enter age" 
                               required />
                        <label asp-for="Age" class="fw-semibold">
                            <i class="fa fa-birthday-cake me-1 text-primary"></i>Age
                            <span class="text-danger">*</span>
                        </label>
                    </div>
                    <span asp-validation-for="Age" class="text-danger small"></span>
                </div>

                <!-- Joining Date -->
                <div class="col-md-6 mb-4">
                    <label asp-for="JoiningDate" class="form-label fw-semibold">
                        <i class="fa fa-calendar me-1 text-primary"></i>Joining Date
                        <span class="text-danger">*</span>
                    </label>
                    <input asp-for="JoiningDate" class="form-control form-control-lg" 
                           type="date" 
                           required />
                    <span asp-validation-for="JoiningDate" class="text-danger small"></span>
                </div>

                <!-- Salary -->
                <div class="col-md-6 mb-4">
                    <div class="form-floating">
                        <input asp-for="Salary" class="form-control form-control-lg" 
                               type="number" step="0.01" 
                               placeholder="Enter salary" />
                        <label asp-for="Salary" class="fw-semibold">
                            <i class="fa fa-dollar-sign me-1 text-primary"></i>Salary
                        </label>
                    </div>
                    <span asp-validation-for="Salary" class="text-danger small"></span>
                </div>

                <!-- Father/Husband Name -->
                <div class="col-md-6 mb-4">
                    <div class="form-floating">
                        <input asp-for="HusbandFatherName" class="form-control form-control-lg" 
                               placeholder="Enter father/husband name" />
                        <label asp-for="HusbandFatherName" class="fw-semibold">
                            <i class="fa fa-user-friends me-1 text-primary"></i>Father/Husband Name
                        </label>
                    </div>
                    <span asp-validation-for="HusbandFatherName" class="text-danger small"></span>
                </div>

                <!-- Email Address -->
                <div class="col-md-6 mb-4">
                    <div class="form-floating">
                        <input asp-for="EmailAddress" class="form-control form-control-lg" 
                               type="email" 
                               placeholder="Enter email address" />
                        <label asp-for="EmailAddress" class="fw-semibold">
                            <i class="fa fa-envelope me-1 text-primary"></i>Email Address
                        </label>
                    </div>
                    <span asp-validation-for="EmailAddress" class="text-danger small"></span>
                </div>

                <!-- Marital Status -->
                <div class="col-md-6 mb-4">
                    <label asp-for="MaritalStatus" class="form-label fw-semibold">
                        <i class="fa fa-heart me-1 text-primary"></i>Marital Status
                    </label>
                    @Html.DropDownList("MaritalStatus", ViewBag.MaritalStatuses as IEnumerable<SelectListItem>, "-- Select Marital Status --", new { @class = "form-control form-control-lg" })
                    @Html.ValidationMessageFor(m => m.MaritalStatus, "", new { @class = "text-danger small" })
                </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                    <i class="fa fa-times me-1"></i>Cancel
                </a>
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="fa fa-save me-1"></i>Create Employee
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/form-validation.js"></script>
}