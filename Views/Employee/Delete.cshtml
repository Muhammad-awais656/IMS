@using IMS.DAL.PrimaryDBContext;
@model IMS.DAL.PrimaryDBContext.Employee;

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white py-3">
        <div class="d-flex align-items-center">
            <i class="fa fa-exclamation-triangle me-2"></i>
            <h4 class="mb-0">Delete Employee</h4>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <i class="fa fa-exclamation-triangle me-2"></i>
            <div>
                <strong>Warning!</strong> Are you sure you want to delete this employee? This action cannot be undone.
            </div>
        </div>

        <div class="card bg-light">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fa fa-info-circle me-2 text-primary"></i>Employee Details
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">First Name</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-user me-1 text-primary"></i>@Html.DisplayFor(model => model.FirstName)
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Last Name</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-user me-1 text-primary"></i>@Html.DisplayFor(model => model.LastName)
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Phone Number</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-phone me-1 text-primary"></i>@Html.DisplayFor(model => model.PhoneNumber)
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">CNIC</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-id-card me-1 text-primary"></i>@Html.DisplayFor(model => model.Cnic)
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Email Address</label>
                        <div class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.EmailAddress))
                            {
                                <i class="fa fa-envelope me-1 text-primary"></i>@Html.DisplayFor(model => model.EmailAddress)
                            }
                            else
                            {
                                <span class="text-muted">No email provided</span>
                            }
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Joining Date</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-calendar me-1 text-primary"></i>@Html.DisplayFor(model => model.JoiningDate)
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Gender</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-venus-mars me-1 text-primary"></i>@Html.DisplayFor(model => model.Gender)
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Age</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-birthday-cake me-1 text-primary"></i>@Html.DisplayFor(model => model.Age)
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="EmployeeId" />
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                    <i class="fa fa-arrow-left me-1"></i>Back to List
                </a>
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fa fa-trash me-1"></i>Delete Employee
                </button>
            </div>
        </form>
    </div>
</div>
