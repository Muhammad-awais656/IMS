@using IMS.DAL.PrimaryDBContext;
@model IMS.DAL.PrimaryDBContext.StockMaster;

@{
    ViewData["Title"] = "Stock Details";
}

@* <div class="container mt-4"> *@
    <div class="card shadow-sm">
                        <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none;">
                    <h2 class="mb-0">Stock Details</h2>
                </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Stock ID:</dt>
                        <dd class="col-sm-8">@Model.StockMasterId</dd>
                        
                        <dt class="col-sm-4">Product ID:</dt>
                        <dd class="col-sm-8">@Model.ProductIdFk</dd>
                        
                        <dt class="col-sm-4">Available Quantity:</dt>
                        <dd class="col-sm-8">@Model.AvailableQuantity</dd>
                        
                        <dt class="col-sm-4">Used Quantity:</dt>
                        <dd class="col-sm-8">@Model.UsedQuantity</dd>
                        
                        <dt class="col-sm-4">Total Quantity:</dt>
                        <dd class="col-sm-8">@Model.TotalQuantity</dd>
                        
                        <dt class="col-sm-4">Uploaded Date:</dt>
                        <dd class="col-sm-8">@(Model.UploadedDate?.ToString("dd/MM/yyyy") ?? "N/A")</dd>
                        
                        <dt class="col-sm-4">Comment:</dt>
                        <dd class="col-sm-8">@(Model.Comment ?? "N/A")</dd>
                        
                        <dt class="col-sm-4">Created Date:</dt>
                        <dd class="col-sm-8">@(Model.CreatedDate?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</dd>
                        
                        <dt class="col-sm-4">Modified Date:</dt>
                        <dd class="col-sm-8">@(Model.ModifiedDate?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</dd>
                    </dl>
                </div>
            </div>

            <div class="mt-4">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.StockMasterId">Edit</a>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
@* </div> *@

