@using IMS.DAL.PrimaryDBContext;
@model IMS.DAL.PrimaryDBContext.StockMaster;

@{
    ViewData["Title"] = "Delete Stock";
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white py-3">
        <div class="d-flex align-items-center">
            <i class="fa fa-exclamation-triangle me-2"></i>
            <h4 class="mb-0">Delete Stock</h4>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <i class="fa fa-exclamation-triangle me-2"></i>
            <div>
                <strong>Warning!</strong> Are you sure you want to delete this stock record? This action cannot be undone.
            </div>
        </div>

        <div class="card bg-light">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fa fa-info-circle me-2 text-primary"></i>Stock Details
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Stock ID</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-hashtag me-1 text-primary"></i>@Model.StockMasterId
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Product ID</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-box me-1 text-primary"></i>@Model.ProductIdFk
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Available Quantity</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-check-circle me-1 text-success"></i>@Model.AvailableQuantity
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Used Quantity</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-times-circle me-1 text-warning"></i>@Model.UsedQuantity
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Total Quantity</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-calculator me-1 text-primary"></i>@Model.TotalQuantity
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Uploaded Date</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-calendar me-1 text-primary"></i>@(Model.UploadedDate?.ToString("dd/MM/yyyy") ?? "N/A")
                        </div>
                    </div>
                    <div class="col-12 mb-3">
                        <label class="form-label fw-semibold text-muted">Comment</label>
                        <div class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.Comment))
                            {
                                <i class="fa fa-comment me-1 text-primary"></i>@Model.Comment
                            }
                            else
                            {
                                <span class="text-muted">No comment provided</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="StockMasterId" />
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                    <i class="fa fa-arrow-left me-1"></i>Back to List
                </a>
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fa fa-trash me-1"></i>Delete Stock
                </button>
            </div>
        </form>
    </div>
</div>

