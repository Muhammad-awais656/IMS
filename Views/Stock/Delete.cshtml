@using IMS.DAL.PrimaryDBContext;
@model IMS.DAL.PrimaryDBContext.StockMaster;

@{
    ViewData["Title"] = "Delete Stock";
}

@* <div class="container mt-4"> *@
    <div class="card shadow-sm">
                        <div class="card-header" style="background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%); color: white; border: none;">
                    <h2 class="mb-0">Delete Stock</h2>
                </div>
        <div class="card-body">
            <h3 class="text-danger">Are you sure you want to delete this stock record?</h3>
            
            <div class="row mt-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Stock ID:</dt>
                        <dd class="col-sm-8">@Model.StockMasterId</dd>
                        
                        <dt class="col-sm-4">Product ID:</dt>
                        <dd class="col-sm-8">@Model.ProductIdFk</dd>
                        
                        <dt class="col-sm-4">Available Quantity:</dt>
                        <dd class="col-sm-8">@Model.AvailableQuantity</dd>
                        
                        <dt class="col-sm-4">Used Quantity:</dt>
                        <dd class="col-sm-8">@Model.UsedQuantity</dd>
                        
                        <dt class="col-sm-4">Total Quantity:</dt>
                        <dd class="col-sm-8">@Model.TotalQuantity</dd>
                        
                        <dt class="col-sm-4">Uploaded Date:</dt>
                        <dd class="col-sm-8">@(Model.UploadedDate?.ToString("dd/MM/yyyy") ?? "N/A")</dd>
                        
                        <dt class="col-sm-4">Comment:</dt>
                        <dd class="col-sm-8">@(Model.Comment ?? "N/A")</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="StockMasterId" />
                <div class="d-flex gap-2">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
@* </div> *@

