@using System.Globalization
@model IMS.DAL.PrimaryDBContext.Sale

@{
    ViewData["Title"] = "Sale Details";
    bool shouldPrint = ViewBag.Print == true;
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="fa-solid fa-receipt me-2"></i>Sale Details - Bill #@Model.BillNumber
                        </h3>
                        <div>
                            @* <div class="btn-group me-2">
                                <button type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown">
                                    <i class="fa-solid fa-receipt me-1"></i>Generate Receipt
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Receipt" asp-action="Print" asp-route-saleId="@Model.SaleId" asp-route-templateType="0" target="_blank">
                                        <i class="fa-solid fa-print me-2"></i>Simple Invoice
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Receipt" asp-action="Print" asp-route-saleId="@Model.SaleId" asp-route-templateType="1" target="_blank">
                                        <i class="fa-solid fa-file-invoice me-2"></i>Detailed Invoice
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Receipt" asp-action="Print" asp-route-saleId="@Model.SaleId" asp-route-templateType="2" target="_blank">
                                        <i class="fa-solid fa-receipt me-2"></i>Compact Receipt
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Receipt" asp-action="Print" asp-route-saleId="@Model.SaleId" asp-route-templateType="3" target="_blank">
                                        <i class="fa-solid fa-chart-bar me-2"></i>General Report
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Receipt" asp-action="Download" asp-route-saleId="@Model.SaleId" asp-route-templateType="1">
                                        <i class="fa-solid fa-download me-2"></i>Download PDF
                                    </a></li>
                                </ul>
                            </div> *@
                            <a asp-action="Index" class="btn btn-outline-light">
                                <i class="fa-solid fa-arrow-left me-1"></i>Back to Sales
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Sale Summary Cards -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Total Amount</h5>
                                    <h3 class="mb-0">@Model.TotalAmount.ToString("C", new CultureInfo("ur-PK"))</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Discount</h5>
                                    <h3 class="mb-0">@Model.DiscountAmount.ToString("C", new CultureInfo("ur-PK"))</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Received</h5>
                                    <h3 class="mb-0">@Model.TotalReceivedAmount.ToString("C", new CultureInfo("ur-PK"))</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card @(Model.TotalDueAmount > 0 ? "bg-danger" : "bg-info") text-white">
                                <div class="card-body text-center">
                                    <h5 class="card-title">Due Amount</h5>
                                    <h3 class="mb-0">@(Model.TotalDueAmount > 0 ? Model.TotalDueAmount.ToString("C", new CultureInfo("ur-PK")) : "Paid")</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sale Information -->
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-primary mb-3">
                                <i class="fa-solid fa-info-circle me-2"></i>Sale Information
                            </h5>
                            <dl class="row">
                                <dt class="col-sm-4">Bill Number:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-primary fs-6">#@Model.BillNumber</span>
                                </dd>

                                <dt class="col-sm-4">Sale Date:</dt>
                                <dd class="col-sm-8">
                                    <i class="fa-solid fa-calendar me-1"></i>@Model.SaleDate.ToString("dd/MM/yyyy")
                                </dd>

                                <dt class="col-sm-4">Customer ID:</dt>
                                <dd class="col-sm-8">
                                    <i class="fa-solid fa-user me-1"></i>@Model.CustomerIdFk
                                </dd>

                                <dt class="col-sm-4">Description:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.SaleDescription))
                                    {
                                        <span class="text-muted">@Model.SaleDescription</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">No description provided</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-primary mb-3">
                                <i class="fa-solid fa-clock me-2"></i>Audit Information
                            </h5>
                            <dl class="row">
                                <dt class="col-sm-4">Created Date:</dt>
                                <dd class="col-sm-8">
                                    <i class="fa-solid fa-calendar-plus me-1"></i>@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                                </dd>

                                <dt class="col-sm-4">Created By:</dt>
                                <dd class="col-sm-8">
                                    <i class="fa-solid fa-user-plus me-1"></i>@Model.CreatedBy
                                </dd>

                                <dt class="col-sm-4">Modified Date:</dt>
                                <dd class="col-sm-8">
                                    <i class="fa-solid fa-calendar-check me-1"></i>@Model.ModifiedDate.ToString("dd/MM/yyyy HH:mm")
                                </dd>

                                <dt class="col-sm-4">Modified By:</dt>
                                <dd class="col-sm-8">
                                    <i class="fa-solid fa-user-edit me-1"></i>@Model.ModifiedBy
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@Model.SaleId" class="btn btn-primary">
                                    <i class="fa-solid fa-edit me-1"></i>Edit Sale
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.SaleId" class="btn btn-danger">
                                    <i class="fa-solid fa-trash me-1"></i>Delete Sale
                                </a>
                                <a asp-action="PrintReceipt" asp-route-id="@Model.SaleId" class="btn btn-success" target="_blank">
                                    <i class="fa-solid fa-print me-1"></i>Print Receipt
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    media print {
        .btn, .card-header .btn {
            display: none !important;
        }
        
        .card {
            border: 1px solid #000 !important;
            box-shadow: none !important;
        }
        
        .card-header {
            background: #f8f9fa !important;
            color: #000 !important;
            border-bottom: 2px solid #000 !important;
        }
        
        .bg-primary, .bg-warning, .bg-success, .bg-danger, .bg-info {
            background: #f8f9fa !important;
            color: #000 !important;
            border: 1px solid #000 !important;
        }
        
        .container-fluid {
            padding: 0 !important;
        }
        
        .row {
            margin: 0 !important;
        }
        
        .col-md-3, .col-md-6, .col-12 {
            padding: 5px !important;
        }
    }
</style>

@if (shouldPrint)
{
    <script>
        // Auto-print when page loads - redirect to print receipt
        window.onload = function() {
            setTimeout(function() {
                window.open('@Url.Action("PrintReceipt", "Sales", new { id = Model.SaleId, print = true })', '_blank');
            }, 500); // Small delay to ensure page is fully loaded
        };
    </script>
}
