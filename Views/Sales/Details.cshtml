@model IMS.DAL.PrimaryDBContext.Sale
@{
    ViewData["Title"] = "Sale Details";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none;">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">Sale Details</h3>
                        <a asp-action="Index" class="btn btn-light">
                            <i class="fa-solid fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Bill Number:</dt>
                                <dd class="col-sm-8">@Model.BillNumber</dd>

                                <dt class="col-sm-4">Sale Date:</dt>
                                <dd class="col-sm-8">@Model.SaleDate.ToString("dd/MM/yyyy")</dd>

                                <dt class="col-sm-4">Total Amount:</dt>
                                <dd class="col-sm-8">@Model.TotalAmount.ToString("C")</dd>

                                <dt class="col-sm-4">Discount Amount:</dt>
                                <dd class="col-sm-8">@Model.DiscountAmount.ToString("C")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Received Amount:</dt>
                                <dd class="col-sm-8">@Model.TotalReceivedAmount.ToString("C")</dd>

                                <dt class="col-sm-4">Due Amount:</dt>
                                <dd class="col-sm-8">@Model.TotalDueAmount.ToString("C")</dd>

                                <dt class="col-sm-4">Customer ID:</dt>
                                <dd class="col-sm-8">@Model.CustomerIdFk</dd>

                                <dt class="col-sm-4">Description:</dt>
                                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.SaleDescription) ? "N/A" : Model.SaleDescription)</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <h5>Additional Information</h5>
                            <dl class="row">
                                <dt class="col-sm-2">Created Date:</dt>
                                <dd class="col-sm-4">@(Model.CreatedDate.ToString("dd/MM/yyyy HH:mm"))</dd>

                                <dt class="col-sm-2">Created By:</dt>
                                <dd class="col-sm-4">@(Model.CreatedBy.ToString())</dd>

                                <dt class="col-sm-2">Modified Date:</dt>
                                <dd class="col-sm-4">@(Model.ModifiedDate.ToString("dd/MM/yyyy HH:mm"))</dd>

                                <dt class="col-sm-2">Modified By:</dt>
                                <dd class="col-sm-4">@(Model.ModifiedBy.ToString())</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <a asp-action="Edit" asp-route-id="@Model.SaleId" class="btn btn-primary">
                                <i class="fa-solid fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.SaleId" class="btn btn-danger">
                                <i class="fa-solid fa-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
