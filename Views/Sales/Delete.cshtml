@model IMS.DAL.PrimaryDBContext.Sale
@{
    ViewData["Title"] = "Delete Sale";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); color: white; border: none;">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">Delete Sale</h3>
                        <a asp-action="Index" class="btn btn-light">
                            <i class="fa-solid fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4 class="alert-heading">Warning!</h4>
                        <p>Are you sure you want to delete this sale? This action cannot be undone.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Bill Number:</dt>
                                <dd class="col-sm-8">@Model.BillNumber</dd>

                                <dt class="col-sm-4">Sale Date:</dt>
                                <dd class="col-sm-8">@Model.SaleDate.ToString("dd/MM/yyyy")</dd>

                                <dt class="col-sm-4">Total Amount:</dt>
                                <dd class="col-sm-8">@Model.TotalAmount.ToString("C")</dd>

                                <dt class="col-sm-4">Customer ID:</dt>
                                <dd class="col-sm-8">@Model.CustomerIdFk</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Discount Amount:</dt>
                                <dd class="col-sm-8">@Model.DiscountAmount.ToString("C")</dd>

                                <dt class="col-sm-4">Received Amount:</dt>
                                <dd class="col-sm-8">@Model.TotalReceivedAmount.ToString("C")</dd>

                                <dt class="col-sm-4">Due Amount:</dt>
                                <dd class="col-sm-8">@Model.TotalDueAmount.ToString("C")</dd>

                                <dt class="col-sm-4">Description:</dt>
                                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.SaleDescription) ? "N/A" : Model.SaleDescription)</dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="SaleId" />
                        
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fa-solid fa-trash"></i> Confirm Delete
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fa-solid fa-times"></i> Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


