@using System.Globalization
@model IMS.DAL.PrimaryDBContext.Sale
@{
    ViewData["Title"] = "Delete Sale";
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white py-3">
        <div class="d-flex align-items-center">
            <i class="fa fa-exclamation-triangle me-2"></i>
            <h4 class="mb-0">Delete Sale</h4>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <i class="fa fa-exclamation-triangle me-2"></i>
            <div>
                <strong>Warning!</strong> Are you sure you want to delete this sale? This action cannot be undone.
            </div>
        </div>

        <div class="card bg-light">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fa fa-info-circle me-2 text-primary"></i>Sale Details
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Bill Number</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-file-text me-1 text-primary"></i>@Model.BillNumber
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Sale Date</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-calendar me-1 text-primary"></i>@Model.SaleDate.ToString("dd/MM/yyyy")
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Total Amount</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-dollar-sign me-1 text-primary"></i>@Model.TotalAmount.ToString("C", new CultureInfo("ur-PK"))
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Customer ID</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-user me-1 text-primary"></i>@Model.CustomerIdFk
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Discount Amount</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-percent me-1 text-primary"></i>@Model.DiscountAmount.ToString("C", new CultureInfo("ur-PK"))
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Received Amount</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-credit-card me-1 text-primary"></i>@Model.TotalReceivedAmount.ToString("C", new CultureInfo("ur-PK"))
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Due Amount</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-calculator me-1 text-primary"></i>@Model.TotalDueAmount.ToString("C", new CultureInfo("ur-PK"))
                        </div>
                    </div>
                    <div class="col-12 mb-3">
                        <label class="form-label fw-semibold text-muted">Description</label>
                        <div class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.SaleDescription))
                            {
                                <i class="fa fa-align-left me-1 text-primary"></i>@Model.SaleDescription
                            }
                            else
                            {
                                <span class="text-muted">No description provided</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="SaleId" />
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                    <i class="fa fa-arrow-left me-1"></i>Back to List
                </a>
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fa fa-trash me-1"></i>Delete Sale
                </button>
            </div>
        </form>
    </div>
</div>


