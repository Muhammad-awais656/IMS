@using System.Globalization
@model IMS.DAL.PrimaryDBContext.Payment

@{
    ViewData["Title"] = "Delete Payment";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); color: white; border: none;">
            <h2 class="mb-0" style="text-align:center">Delete Payment</h2>
        </div>

        <div class="card-body">
            <div class="alert alert-warning">
                <h4>Are you sure you want to delete this payment?</h4>
                <p>This action cannot be undone.</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Payment ID:</dt>
                        <dd class="col-sm-8">@Model.PaymentId</dd>

                        <dt class="col-sm-4">Payment Amount:</dt>
                        <dd class="col-sm-8">@Model.PaymentAmount.ToString("C", new CultureInfo("ur-PK"))</dd>

                        <dt class="col-sm-4">Sale ID:</dt>
                        <dd class="col-sm-8">@Model.SaleId</dd>

                        <dt class="col-sm-4">Customer ID:</dt>
                        <dd class="col-sm-8">@Model.CustomerId</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Payment Date:</dt>
                        <dd class="col-sm-8">@Model.PaymentDate.ToString("M/d/yyyy h:mm:ss tt")</dd>

                        <dt class="col-sm-4">Created Date:</dt>
                        <dd class="col-sm-8">@Model.CreatedDate.ToString("M/d/yyyy h:mm:ss tt")</dd>

                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@(Model.Description ?? "N/A")</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="PaymentId" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">Delete Payment</button>
                </div>
            </form>
        </div>
    </div>
</div>
