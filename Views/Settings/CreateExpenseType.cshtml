@using IMS.DAL.PrimaryDBContext
@model AdminExpenseType;

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h2 class="mb-0">Create Expense Type</h2>
    </div>
    <div class="card-body">
        <form asp-action="CreateExpenseType">
            <div class="mb-3">
                <label asp-for="ExpenseTypeName" class="form-label"></label><span class="text-warning">*</span>
                <input asp-for="ExpenseTypeName" class="form-control" />
                <span asp-validation-for="ExpenseTypeName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ExpenseTypeDescription" class="form-label"></label>
                
                <input asp-for="ExpenseTypeDescription" class="form-control" placeholder="Must enter some desciption" />
                <span asp-validation-for="ExpenseTypeDescription" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check form-switch">
                <input type="checkbox" asp-for="IsEnabled" class="form-check-input" />
                <label asp-for="IsEnabled" class="form-check-label" class="form-control"></label>
                <span asp-validation-for="IsEnabled" class="text-danger"></span>
            </div>
           
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Create</button>
                <a asp-action="GetAllExpenseTypes" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}