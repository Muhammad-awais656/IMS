@model List<object>
@{
    ViewData["Title"] = "Test Modern Receipt Generation";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fa-solid fa-vial me-2"></i>Test Modern Receipt Generation
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fa-solid fa-info-circle me-2"></i>
                        This page allows you to test modern receipt generation with different templates. 
                        Make sure you have at least one sale record in the database.
                    </div>

                    <div class="row">
                        @foreach (dynamic template in Model)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <i class="fa-solid fa-receipt me-2"></i>@template.Name
                                        </h5>
                                        <p class="card-text">@template.Description</p>
                                        <div class="mt-auto">
                                            <span class="badge bg-secondary">@template.Type</span>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <a asp-action="TestReceipt" asp-route-saleId="1" asp-route-templateType="@template.Type" 
                                           class="btn btn-primary" target="_blank">
                                            <i class="fa-solid fa-play me-2"></i>Test Template
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fa-solid fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                            <h5 class="text-warning">No templates available</h5>
                            <p class="text-muted">Receipt templates will be loaded automatically.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
