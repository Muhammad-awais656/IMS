@model IMS.Models.ModernReceiptViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@Model.Header.Title</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Calibri', 'Helvetica', sans-serif;
            font-size: 12px;
            line-height: 1.4;
            color: #333;
            background: white;
        }

        .receipt-container {
            max-width: 3in;
            margin: 0 auto;
            padding: 10px;
        }

        .header {
            text-align: center;
            margin-bottom: 15px;
        }

        .header h1 {
            font-size: 20px;
            margin-bottom: 5px;
            color: #2e3192;
        }

        .header .subtitle {
            font-size: 15px;
            color: #666;
        }

        .customer-info {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
            font-size: 15px;
        }

        .customer-info div {
            flex: 1;
        }

        .section-title {
            font-size: 18px;
            font-weight: bold;
            margin: 15px 0 10px 0;
            text-align: center;
        }

        .items-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 15px;
            font-size: 15px;
        }

        .items-table th,
        .items-table td {
            border: 1px solid #000;
            padding: 5px;
            text-align: left;
        }

        .items-table th {
            background-color: #f5f5f5;
            font-weight: bold;
        }

        .items-table .text-right {
            text-align: right;
        }

        .items-table .text-center {
            text-align: center;
        }

        .totals-table {
            width: 100%;
            margin-bottom: 15px;
        }

        .totals-table td {
            padding: 5px 0;
            font-size: 20px;
        }

        .totals-table .label {
            text-align: right;
            width: 80%;
            font-weight: bold;
        }

        .totals-table .value {
            text-align: right;
            width: 20%;
        }

        .totals-table .highlight {
            border-top: 1px solid #000;
            border-bottom: 1px solid #000;
            font-weight: bold;
        }

        .footer {
            margin-top: 20px;
            text-align: left;
        }

        .footer .generated-by {
            font-size: 18px;
            margin-bottom: 10px;
        }

        .footer .powered-by {
            font-size: 18px;
            text-align: left;
        }

        .footer .powered-by a {
            color: #2e3192;
            text-decoration: none;
        }

        @* Print styles *@
        <style>
            @@media print {
                body {
                    margin: 0;
                    padding: 0;
                }
                
                .receipt-container {
                    max-width: none;
                    margin: 0;
                    padding: 10px;
                }
            }
        </style>
</head>
<body>
    <div class="receipt-container">
        <div class="header">
            <h1>@Model.Header.Title</h1>
            <div class="subtitle">@Model.Header.Subtitle</div>
        </div>

        <div class="customer-info">
            <div>
                <strong>Name:</strong> @Model.CustomerInfo.CustomerName
            </div>
            <div>
                <strong>Bill No.:</strong> @Model.SaleInfo.BillNo
            </div>
            <div>
                <strong>Date:</strong> @Model.SaleInfo.SaleDateFormatted
            </div>
        </div>

        <div class="section-title">Customer Copy</div>

        <table class="items-table">
            <thead>
                <tr>
                    <th class="text-center" style="width: 5%;">S#</th>
                    <th style="width: 45%;">Description</th>
                    <th class="text-right" style="width: 15%;">Qty</th>
                    <th class="text-right" style="width: 20%;">Rate</th>
                    <th class="text-right" style="width: 15%;">Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td class="text-center">@item.SerialNumber</td>
                        <td>@item.ProductName</td>
                        <td class="text-right">@item.Quantity.ToString("N2")</td>
                        <td class="text-right">@item.SalePrice.ToString("N2")</td>
                        <td class="text-right">@item.PayableAmount.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>

        <table class="totals-table">
            <tr>
                <td class="label">Total:</td>
                <td class="value">@Model.Totals.TotalAmount.ToString("N2")</td>
            </tr>
            <tr>
                <td class="label">Discount:</td>
                <td class="value">@Model.Totals.InvoiceDiscount.ToString("N2")</td>
            </tr>
            <tr>
                <td class="label">Previous Amount:</td>
                <td class="value">@Model.Totals.PreviousAmount.ToString("N2")</td>
            </tr>
            <tr>
                <td class="label">To be Paid:</td>
                <td class="value">@Model.Totals.TotalDue.ToString("N2")</td>
            </tr>
            <tr class="highlight">
                <td class="label">Paid:</td>
                <td class="value">@Model.Totals.CashReceived.ToString("N2")</td>
            </tr>
        </table>

        <div class="footer">
            <div class="generated-by">
                Generated by: <strong>@Model.CustomerInfo.CreatedByUserName</strong>
            </div>
            <div class="powered-by">
                Powered by <strong><a href="@Model.Footer.Website" target="_blank">@Model.Footer.PoweredBy</a></strong>
            </div>
        </div>
    </div>
</body>
</html>
