@model IMS.Models.ModernReceiptViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@Model.Header.Title</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Calibri', 'Helvetica', sans-serif;
            font-size: 12px;
            line-height: 1.4;
            color: #333;
            background: white;
            max-width: 1280px;
            margin: 0 auto;
        }

        .header-section {
            margin-bottom: 20px;
        }

        .company-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 20px;
        }

        .company-logo {
            width: 350px;
            height: 70px;
        }

        .company-info {
            text-align: right;
            color: #2e3192;
            font-weight: bold;
            line-height: 1.3;
        }

        .report-title {
            text-align: center;
            font-size: 24px;
            margin: 20px 0;
            color: #2e3192;
        }

        .filters-section {
            margin: 20px 0;
        }

        .filters-table {
            width: 100%;
            border-collapse: collapse;
        }

        .filters-table th,
        .filters-table td {
            padding: 8px 15px;
            border-bottom: 1px solid #d6d6d6;
            text-align: left;
        }

        .filters-table th {
            font-size: 17px;
            color: #191919;
            font-weight: bold;
        }

        .filters-table td {
            font-size: 16px;
            color: #4A4A4A;
        }

        .data-section {
            margin: 20px 0;
        }

        .data-table {
            width: 100%;
            border-collapse: collapse;
        }

        .data-table th,
        .data-table td {
            padding: 8px 5px;
            border-bottom: 1px solid #d6d6d6;
            text-align: left;
        }

        .data-table th {
            font-size: 15px;
            color: #191919;
            font-weight: bold;
            background-color: #f8f9fa;
        }

        .data-table td {
            font-size: 14px;
            color: #4A4A4A;
        }

        .data-table .text-right {
            text-align: right;
        }

        .totals-section {
            margin: 20px 0;
        }

        .totals-table {
            width: 50%;
            margin-left: auto;
            border-collapse: collapse;
        }

        .totals-table th,
        .totals-table td {
            padding: 8px 15px;
            border-right: 1px solid #d6d6d6;
            text-align: left;
        }

        .totals-table th {
            font-size: 17px;
            color: #191919;
            font-weight: bold;
        }

        .totals-table td {
            font-size: 16px;
            color: #4A4A4A;
        }

        .totals-table td:last-child {
            border-right: none;
        }

        .footer-section {
            margin-top: 40px;
            text-align: left;
        }

        .footer-section .powered-by {
            font-size: 18px;
            color: #666;
        }

        .footer-section .powered-by a {
            color: #2e3192;
            text-decoration: none;
        }

        @* Print styles *@
        <style>
            @@media print {
                body {
                    margin: 0;
                    padding: 20px;
                }
            }
        </style>
</head>
<body>
    @if (Model.Header.ShowHeader)
    {
        <div class="header-section">
            <div class="company-header">
                <div>
                    <img src="@Model.CompanyInfo.LogoPath" alt="Company Logo" class="company-logo" />
                </div>
                <div class="company-info">
                    @Model.CompanyInfo.Address<br />
                    @Model.CompanyInfo.Phone<br />
                    @Model.CompanyInfo.Email
                </div>
            </div>
        </div>
    }

    <div class="report-title">
        <h1>@Model.Header.Title</h1>
    </div>

    <div class="filters-section">
        <table class="filters-table">
            <tr>
                <th>Bill Number</th>
                <td>@Model.SaleInfo.BillNo</td>
                <th>Sale Date</th>
                <td>@Model.SaleInfo.SaleDateFormatted</td>
            </tr>
            <tr>
                <th>Customer</th>
                <td>@Model.CustomerInfo.CustomerName</td>
                <th>Generated By</th>
                <td>@Model.CustomerInfo.CreatedByUserName</td>
            </tr>
        </table>
    </div>

    <div class="data-section">
        <table class="data-table">
            <thead>
                <tr>
                    <th>S#</th>
                    <th>Product</th>
                    <th class="text-right">Quantity</th>
                    <th class="text-right">Unit Price</th>
                    <th class="text-right">Sale Price</th>
                    <th class="text-right">Discount</th>
                    <th class="text-right">Payable Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.SerialNumber</td>
                        <td>@item.ProductName</td>
                        <td class="text-right">@item.Quantity.ToString("N2")</td>
                        <td class="text-right">@item.UnitPrice.ToString("N2")</td>
                        <td class="text-right">@item.SalePrice.ToString("N2")</td>
                        <td class="text-right">@item.DiscountAmount.ToString("N2")</td>
                        <td class="text-right">@item.PayableAmount.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="totals-section">
        <table class="totals-table">
            <tr>
                <th>Total Amount</th>
                <td>@Model.Totals.TotalAmount.ToString("N2")</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>@Model.Totals.InvoiceDiscount.ToString("N2")</td>
            </tr>
            <tr>
                <th>Received Amount</th>
                <td>@Model.Totals.CashReceived.ToString("N2")</td>
            </tr>
            <tr>
                <th>Due Amount</th>
                <td>@Model.Totals.TotalDue.ToString("N2")</td>
            </tr>
        </table>
    </div>

    <div class="footer-section">
        <div class="powered-by">
            Powered by <strong><a href="@Model.Footer.Website" target="_blank">@Model.Footer.PoweredBy</a></strong>
        </div>
    </div>
</body>
</html>
