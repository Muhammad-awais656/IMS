@model IMS.Models.GeneralExpensesReportViewModel;
@{
    bool isAdmin = Convert.ToBoolean(User.FindFirst("IsAdmin")?.Value);
    string role = isAdmin ? "Admin" : "User";
}
<div class="card shadow-sm">
    <div class="card-header bg-primary text-white py-3">
        <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <i class="fa fa-money-bill-wave me-2"></i>
                <h4 class="mb-0">General Expenses Report</h4>
            </div>
            <div class="d-flex gap-2">
                <a href="#" id="exportExcelBtn" class="btn btn-warning btn-sm">
                    <i class="fa fa-file-excel text-success me-1"></i> Export Excel
                </a>
                <a href="#" id="exportPdfBtn" class="btn btn-warning btn-sm">
                    <i class="fa fa-file-pdf text-danger me-1"></i> Export PDF
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <!-- Enhanced Filter Section -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fa fa-filter me-2 text-primary"></i>Filter Options
                </h5>
            </div>
            <div class="card-body">
                <form id="filterForm" asp-action="GeneralExpensesReport" asp-controller="Report" method="get">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">
                                <i class="fa fa-tags me-1 text-primary"></i>Expense Type
                            </label>
                            <br />
                           <div>
                                @Html.DropDownList("GeneralExpensesReportFilters.ExpenseTypeId", ViewBag.ExpenseTypes as IEnumerable<SelectListItem>,
                                "-- Select Expense Type --",
                                                                new { @class = "form-control", @id = "expenseTypeComboBox" })

                           </div>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">
                                <i class="fa fa-calendar me-1 text-primary"></i>From Date
                            </label>
                            <input type="date" name="FromDate"
                                   value="@(string.IsNullOrEmpty(Context.Request.Query["FromDate"]) ? DateTime.Now.ToString("yyyy-MM-dd") : Context.Request.Query["FromDate"].ToString())"
                                   class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">
                                <i class="fa fa-calendar me-1 text-primary"></i>To Date
                            </label>
                            <input type="date" name="ToDate"
                                   value="@(string.IsNullOrEmpty(Context.Request.Query["ToDate"]) ? DateTime.Now.ToString("yyyy-MM-dd") : Context.Request.Query["ToDate"].ToString())"
                                   class="form-control" />
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <div class="d-flex gap-2 w-100">
                                <button type="submit" class="btn btn-primary flex-fill">
                                    <i class="fa fa-search me-1"></i> Search
                                </button>
                                <a asp-action="GeneralExpensesReport" class="btn btn-outline-secondary flex-fill">
                                    <i class="fa fa-refresh me-1"></i> Refresh
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card bg-danger text-white">
                    <div class="card-body">
                        <h6 class="card-title">Total Expenses Amount</h6>
                        <h3 class="mb-0">@Model.TotalAmount.ToString("N2")</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Enhanced Table Section -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fa fa-table me-2"></i>Expense Wise Report Data
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive" id="printArea">
                    <table id="generalExpensesTable" class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="fa fa-calendar me-1"></i>Date</th>
                                <th><i class="fa fa-tag me-1"></i>Expense Type</th>
                                <th><i class="fa fa-info-circle me-1"></i>Description</th>
                                <th><i class="fa fa-money-bill me-1"></i>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ExpensesList.Any())
                            {
                                string currentExpenseType = "";
                                @foreach (var item in Model.ExpensesList)
                                {
                                    // Check if this is a new expense type group
                                    if (!string.IsNullOrEmpty(item.ExpenseTypeName) && currentExpenseType != item.ExpenseTypeName && !item.IsTotalRow)
                                    {
                                        currentExpenseType = item.ExpenseTypeName;
                                    }
                                    
                                    <tr class="@(item.IsTotalRow ? "table-info fw-bold" : "")">
                                        <td>
                                            @if (!item.IsTotalRow)
                                            {
                                                @item.ExpenseDate.ToString("dd-MMM-yyyy")
                                            }
                                        </td>
                                        <td>
                                            @if (item.IsTotalRow)
                                            {
                                                <strong>Total Expenses - @item.ExpenseTypeName</strong>
                                            }
                                            else
                                            {
                                                <strong>@Html.DisplayFor(modelItem => item.ExpenseTypeName)</strong>
                                            }
                                        </td>
                                        <td>
                                            @if (!item.IsTotalRow && !string.IsNullOrEmpty(item.ExpenseDetail))
                                            {
                                                @Html.DisplayFor(modelItem => item.ExpenseDetail)
                                            }
                                        </td>
                                        <td>
                                            <strong class="@(item.IsTotalRow ? "text-primary" : "text-danger")">
                                                @item.Amount.ToString("N2")
                                            </strong>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4">
                                        <div class="d-flex flex-column align-items-center">
                                            <i class="fa fa-inbox fa-3x text-muted mb-3"></i>
                                            <h5 class="text-muted">No Expenses Data Found</h5>
                                            <p class="text-muted">Try adjusting your filter criteria to see more results.</p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- Enhanced Pagination Section -->
        <div class="card mt-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <div class="d-flex align-items-center">
                        <i class="fa fa-info-circle me-2 text-primary"></i>
                        <span class="text-muted">
                            <strong>@Model.TotalCount</strong> total items | Showing <strong>@Model.PageSize</strong> items per page
                        </span>
                    </div>
                    <div class="d-flex align-items-center gap-3">
                        <label for="pageSize" class="form-label mb-0 text-muted">
                            <i class="fa fa-list me-1"></i>Items Per Page:
                        </label>
                        <select id="pageSize" class="form-select form-select-sm w-auto" onchange="changePageSize(this)">
                            <option value="10" selected="@(Model.PageSize == 10)">10</option>
                            <option value="20" selected="@(Model.PageSize == 20)">20</option>
                            <option value="30" selected="@(Model.PageSize == 30)">30</option>
                        </select>
                    </div>
                </div>
                @if (Model.TotalPages > 1)
                {
                    var expenseTypeId = Model.Filters?.ExpenseTypeId?.ToString() ?? "";
                    var fromDate = Model.Filters?.FromDate?.ToString("yyyy-MM-dd") ?? "";
                    var toDate = Model.Filters?.ToDate?.ToString("yyyy-MM-dd") ?? "";
                    
                    // Build query string parameters
                    var queryParams = new List<string>
                    {
                        $"pageSize={Model.PageSize}"
                    };
                    
                    if (!string.IsNullOrEmpty(expenseTypeId))
                        queryParams.Add($"expenseTypeId={expenseTypeId}");
                    if (!string.IsNullOrEmpty(fromDate))
                        queryParams.Add($"FromDate={fromDate}");
                    if (!string.IsNullOrEmpty(toDate))
                        queryParams.Add($"ToDate={toDate}");
                    
                    var queryString = string.Join("&", queryParams);
                    
                    <nav aria-label="General Expenses Report pagination" class="mt-3">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link" href="/Report/GeneralExpensesReport?pageNumber=1&@queryString">
                                    <i class="fa fa-angle-double-left me-1"></i>First
                                </a>
                            </li>
                            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link" href="/Report/GeneralExpensesReport?pageNumber=@(Model.CurrentPage - 1)&@queryString">
                                    <i class="fa fa-angle-left me-1"></i>Previous
                                </a>
                            </li>
                            @{
                                int startPage = Math.Max(1, Model.CurrentPage - 1);
                                int endPage = Math.Min(Model.TotalPages, startPage + 2);
                                if (endPage - startPage < 2)
                                {
                                    startPage = Math.Max(1, endPage - 2);
                                }
                            }
                            @for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="/Report/GeneralExpensesReport?pageNumber=@i&@queryString">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                <a class="page-link" href="/Report/GeneralExpensesReport?pageNumber=@(Model.CurrentPage + 1)&@queryString">
                                    Next<i class="fa fa-angle-right ms-1"></i>
                                </a>
                            </li>
                            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                <a class="page-link" href="/Report/GeneralExpensesReport?pageNumber=@Model.TotalPages&@queryString">
                                    Last<i class="fa fa-angle-double-right ms-1"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize Kendo UI ComboBox for Expense Type
            $("#expenseTypeComboBox").kendoComboBox({
                placeholder: "-- Select Expense Type --",
                filter: "contains",
                suggest: true,
                minLength: 1,
                dataTextField: "Text",
                dataValueField: "Value",
                change: function(e) {
                    console.log("Expense Type selection changed:", e.sender.value());
                },
                select: function(e) {
                    console.log("Expense Type selected:", e.item);
                }
            });
        });

        function changePageSize(select) {
            var expenseTypeId = document.getElementById("expenseTypeComboBox").value;
            var fromDate = document.querySelector("input[name='FromDate']").value;
            var toDate = document.querySelector("input[name='ToDate']").value;

            var url = `/Report/GeneralExpensesReport?pageNumber=1&expenseTypeId=${expenseTypeId}&pageSize=${select.value}&FromDate=${fromDate}&ToDate=${toDate}`;
            window.location.href = url;
        }
    </script>
    <script>
        document.getElementById("exportExcelBtn").addEventListener("click", function () {
            var expenseTypeId = document.getElementById("expenseTypeComboBox").value;
            var fromDate = document.querySelector("input[name='FromDate']").value;
            var toDate = document.querySelector("input[name='ToDate']").value;

            var url = `/Report/ExportGeneralExpensesExcel?expenseTypeId=${expenseTypeId}&FromDate=${fromDate}&ToDate=${toDate}`;
            window.location.href = url;
        });

        document.getElementById("exportPdfBtn").addEventListener("click", function () {
            var expenseTypeId = document.getElementById("expenseTypeComboBox").value;
            var fromDate = document.querySelector("input[name='FromDate']").value;
            var toDate = document.querySelector("input[name='ToDate']").value;

            var url = `/Report/ExportGeneralExpensesPdf?expenseTypeId=${expenseTypeId}&FromDate=${fromDate}&ToDate=${toDate}`;
            window.location.href = url;
        });
    </script>
}

