@using IMS.DAL.PrimaryDBContext
@model ProductViewModel;

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h2 class="mb-0">Create Product</h2>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <!-- Product Fields -->
                    
                    <div class="mb-2">
                        <label>Product name :</label>
                        <input asp-for="ProductName" class="form-control" required/>
                    </div>

                    <div class="mb-2">
                        <label>Product code :</label>
                        <input asp-for="ProductCode" class="form-control" />
                    </div>

                    <div class="mb-2">
                        <label>Description :</label>
                        <textarea asp-for="ProductDescription" class="form-control"></textarea>
                    </div>

                    <div class="mb-2">
                        <label>Unit price :</label>
                        <input asp-for="Price" class="form-control" />
                    </div>

                    <div class="mb-2">
                        <label>Measuring unit type :</label>
                      @*   <select id="MeasuringUnitTypeId" asp-for="MUTId"
                                asp-items="ViewBag.MeasuringUnitTypes"
                                class="form-control">
                            <option value=""><-- Select MU Type --></></option>
                        
                        </select> *@
                        <select asp-for="MUTId" asp-items="ViewBag.MeasuringUnitTypes"
                                class="form-control" id="MeasuringUnitTypeId">
                            <option value="">-- Select MU Type --</option>
                        </select>
                    </div>

                    <div class="mb-2">
                        <label>Label :</label>
                        <select asp-for="LabelId" asp-items="ViewBag.Labels" class="form-control">
                            <option value=""><-- Select Label --></></option>
                        </select>
                    </div>

                    <div class="mb-2">
                        <label>Category :</label>
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                            <option value=""><-- Select Category --></></option>
                        </select>
                    </div>

                    <div class="mb-2">
                        <label>Vendor :</label>
                        <select asp-for="VendorId" asp-items="ViewBag.Vendors" class="form-control">
                            <option value=""><-- Select Vendor --></></option>
                        </select>
                    </div>

                    <div class="form-check">
                        @* <input asp-for="IsEnabled" value="" class="form-check-input" /> *@
                        <input asp-for="IsEnabled" name="IsEnabled" type="checkbox" value="true" class="form-check-input" />
                        <input asp-for="IsEnabled" name="IsEnabled" type="hidden" value="false" class="form-check-input" />

                        <label class="form-check-label">Enabled</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <!-- Sizes -->
                    <h6>Sizes</h6>
                    <div class="modal fade" id="sizeModal" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content" id="sizeModalContent">
                                <!-- Partial will load here -->
                            </div>
                        </div>
                    </div>

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>MU</th>
                                <th>Size from</th>
                                <th>Size to</th>
                                <th>Unit price</th>
                                <th>Actions</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.productRanges.Count > 0)
                            {
                                @foreach (var item in Model.productRanges)
                                {
                                    <tr>
                                        <td>@item.MeasuringUnitIdFk</td>
                                        <td>@item.RangeFrom</td>
                                        <td>@item.RangeTo</td>
                                        <td>@item.UnitPrice</td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-primary">Edit</button>
                                            <button type="button" class="btn btn-sm btn-danger">Delete</button>
                                        </td>
                                    </tr>

                                }

                            }



                        </tbody>
                    </table>
                    <button id="addSizeBtn" type="button" class="btn btn-sm btn-primary">Add size</button>

                    
                </div>
            </div>

            <div class="mt-3">
                <button id="saveSizeBtn" type="submit" class="btn btn-success">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Close</a>
            </div>
        </form>
    </div>
    <!-- Modal container -->
    <div class="modal fade" id="sizeModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" id="sizeModalContent">

                <div class="modal-header">
                    <h5 class="modal-title">Add Size</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <form id="addSizeForm">
                        <div class="mb-2">
                            <label>Measuring Unit</label>
                            <select name="MeasuringUnitIdFk" asp-items="ViewBag.MeasuringUnits" class="form-control">
                                <option value="">-- Select Measuring Unit --</option>
                            </select>
                        </div>
                        <div class="mb-2">
                            <label>Size From</label>
                            <input name="RangeFrom" class="form-control" required />
                        </div>
                        <div class="mb-2">
                            <label>Size To</label>
                            <input name="RangeTo" class="form-control" required />
                        </div>
                        <div class="mb-2">
                            <label>Unit Price</label>
                            <input name="UnitPrice" class="form-control" required />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary" id="saveSizeBtn">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

