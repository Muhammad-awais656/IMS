<style>
    /* Dashboard custom styling */
    .card-compact {
        border-radius: 12px;
        box-shadow: 0 6px 18px rgba(12, 32, 63, .08);
    }

    .stat-value {
        font-size: 1.6rem;
        font-weight: 700;
    }

    .stat-label {
        color: #6c757d;
    }

    .small-muted {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .chart-card {
        min-height: 320px;
    }

    .top-product-badge {
        font-size: 0.8rem;
    }

    .table-recent td, .table-recent th {
        vertical-align: middle;
    }
</style>

<div class="container-fluid py-4" style="background-color:azure">
    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Inventory Management System Dashboard</h3>
            <div class="small text-muted">Welcome back — overview of latest activity</div>
        </div>
    </div>

    <!-- Summary cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card card-compact p-3">
                <div class="d-flex align-items-center">
                    <div class="me-3 bg-light rounded-circle p-3"><i class="fa fa-box fa-2x text-primary"></i></div>
                    <div>
                        <div class="stat-value">@Model.TotalProducts</div>
                        <div class="stat-label">Total Products</div>
                    </div>
                </div>
                <div class="small-muted mt-2">Active products across warehouses</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card card-compact p-3">
                <div class="d-flex align-items-center">
                    <div class="me-3 bg-light rounded-circle p-3"><i class="fa fa-sitemap fa-2x text-success"></i></div>
                    <div>
                        <div class="stat-value">@Model.TotalCategories</div>
                        <div class="stat-label">Categories</div>
                    </div>
                </div>
                <div class="small-muted mt-2">Product groups</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card card-compact p-3">
                <div class="d-flex align-items-center">
                    <div class="me-3 bg-light rounded-circle p-3"><i class="fa fa-truck fa-2x text-warning"></i></div>
                    <div>
                        <div class="stat-value">@Model.TotalVendors</div>
                        <div class="stat-label">Vendors</div>
                    </div>
                </div>
                <div class="small-muted mt-2">Active suppliers</div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card card-compact p-3">
                <div class="d-flex align-items-center">
                    <div class="me-3 bg-light rounded-circle p-3"><i class="fa fa-dollar-sign fa-2x text-danger"></i></div>
                    <div>
                        <div class="stat-value">@Model.MonthlyRevenue.ToString("C")</div>
                        <div class="stat-label">This Month Revenue</div>
                    </div>
                </div>
                <div class="small-muted mt-2">Sales (net)</div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- Left: charts -->
        <div class="col-lg-8">
            <div class="card chart-card mb-3 p-3">
                <div class="d-flex justify-content-between align-items-center mb-2">
