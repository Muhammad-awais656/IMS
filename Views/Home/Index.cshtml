                            <i class="fa fa-truck"></i>
                        </div>
                        <div class="stat-value">@Model.TotalVendors</div>
                        <div class="stat-label">Vendors</div>
                        <div class="stat-description">Active suppliers</div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6">
