    <partial name="_ValidationScriptsPartial" />
<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
        $(document).ready(function() {
            // Check if Kendo UI is loaded
            if (typeof kendo === 'undefined') {
                console.error('Kendo UI is not loaded. Please check script references.');
                return;
            }

            // Initialize Kendo UI ComboBox for product selection
            $("#productDropdown").kendoComboBox({
                dataSource: {
                    transport: {
                        read: {
                            url: "/Home/GetProducts",
                            dataType: "json"
                        }
                    }
                },
                dataTextField: "text",
                dataValueField: "value",
                placeholder: "-- Select Product --",
                filter: "contains",
                suggest: true,
                minLength: 1,
                change: function (e) {
                    let productId = this.value();
                    if (productId == "0" || !productId) return;

                    $.getJSON("/Home/GetStockStatus", { productId: productId }, function (data) {
                        stockChart.data.datasets[0].data = [
                            data.inStockCount,
                            data.lowStockCount,
                            data.outOfStockCount
                        ];
                        stockChart.update();

                        $("#stockLabels").html(`
                            <div><span class="badge bg-success me-1">&nbsp;</span>In stock: ${data.inStockCount}</div>
                            <div><span class="badge bg-warning me-1">&nbsp;</span>Available: ${data.lowStockCount}</div>
                            <div><span class="badge bg-danger me-1">&nbsp;</span>Used: ${data.outOfStockCount}</div>
                        `);
                    });
                }
            });

            // prepare data from server model
            const monthlyLabels = @Html.Raw(JsonSerializer.Serialize(Model.MonthlyLabels));
            const monthlyData = @Html.Raw(JsonSerializer.Serialize(Model.MonthlySales));

    // Sales line chart
    const ctx = document.getElementById('salesChart').getContext('2d');
    const salesChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: monthlyLabels,
            datasets: [{
                label: 'Sales',
                data: monthlyData,
                fill: true,
                borderColor: '#4e73df',
                backgroundColor: 'rgba(78,115,223,0.08)',
                tension: 0.3,
                pointRadius: 3
            }]
        },
        options: {
            plugins: { legend: { display: false },
                         tooltip: { enabled: true } },
            scales: {
                y: { beginAtZero: true, ticks: { callback: v => 'Rs.' + v } }
            }
        }
    });

    // Stock donut
    const donutCtx = document.getElementById('stockDonut').getContext('2d');
    const donut = new Chart(donutCtx, {
        type: 'doughnut',
        data: {
            labels: ['In Stock','Out of Stock', 'Available Stock' ],
            datasets: [{
                data: [@Model.InStockCount,@Model.OutOfStockCount, @Model.LowStockCount],
                backgroundColor: ['#28a745','#dc3545','#ffc107']
            }]
        },
        options: { plugins: { legend: { position: 'bottom' } } }
    });
    });
</script>
