@using IMS.DAL.PrimaryDBContext;
@model AdminLabel;

<div class="card shadow-sm">
                <div class="card-header bg-warning text-dark py-3">
                    <div class="d-flex align-items-center">
                        <i class="fa fa-edit me-2"></i>
                        <h4 class="mb-0">Edit Admin Label</h4>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" id="editLabelForm" novalidate>
                        <input type="hidden" asp-for="LabelId" />
                        
                        <div class="mb-3">
                            <label asp-for="LabelName" class="form-label fw-semibold">
                                <i class="fa fa-tag me-1"></i>@Html.DisplayNameFor(m => m.LabelName)
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="LabelName" class="form-control form-control-lg" 
                                   placeholder="Enter label name" 
                                   required />
                            <span asp-validation-for="LabelName" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="LabelDescription" class="form-label fw-semibold">
                                <i class="fa fa-align-left me-1"></i>@Html.DisplayNameFor(m => m.LabelDescription)
                            </label>
                            <textarea asp-for="LabelDescription" class="form-control" 
                                      rows="3" 
                                      placeholder="Enter description (optional)"></textarea>
                            <span asp-validation-for="LabelDescription" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input type="checkbox" asp-for="IsEnabled" class="form-check-input" id="isEnabledSwitch" />
                                <label asp-for="IsEnabled" class="form-check-label fw-semibold" for="isEnabledSwitch">
                                    <i class="fa fa-toggle-on me-1"></i>@Html.DisplayNameFor(m => m.IsEnabled)
                                </label>
                            </div>
                            <span asp-validation-for="IsEnabled" class="text-danger small"></span>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                                <i class="fa fa-times me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fa fa-save me-1"></i>Update Label
                            </button>
                        </div>
                    </form>
                </div>
            </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/form-validation.js"></script>
}