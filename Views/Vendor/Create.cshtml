@using IMS.DAL.PrimaryDBContext
@model AdminSupplier;



    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Create Vendor</h2>
                </div>
                <div class="card-body">
                    <div class="row row-cols-1 row-cols-md-2 row-cols-md-4 g-4 mt-2">
                        
                        <div class="col">
                            <label asp-for="SupplierName" class="form-label"> Vendor Name:</label>
                            <input asp-for="SupplierName" class="form-control" />
                            <span asp-validation-for="SupplierName" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="SupplierPhoneNumber" class="form-label"> Contact Number:</label>
                            <input asp-for="SupplierPhoneNumber" class="form-control" />
                            <span asp-validation-for="SupplierPhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="SupplierNtn" class="form-label"> NTN:</label>
                            <input asp-for="SupplierNtn" class="form-control" />
                            <span asp-validation-for="SupplierNtn" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="SupplierEmail" class="form-label">Vendor Email:</label>
                            <input asp-for="SupplierEmail" class="form-control" />
                            <span asp-validation-for="SupplierEmail" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="SupplierAddress" class="form-label"> Address :</label>
                            <input asp-for="SupplierAddress" class="form-control" />
                            <span asp-validation-for="SupplierAddress" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="SupplierDescription" class="form-label"> Description :</label>
                            <input asp-for="SupplierDescription" class="form-control" />
                            <span asp-validation-for="SupplierDescription" class="text-danger"></span>
                        </div>

                        <div class="col form-check form-switch">
                            <label asp-for="IsDeleted" class="form-check-label" class="form-control"> Is Deleted</label>
                            <input type="checkbox" asp-for="IsDeleted" class="form-check-input" />
                            <span asp-validation-for="IsDeleted" class="text-danger"></span>
                        </div>

                    </div>
                </div>
                <div class="mb-3" style="padding:inherit">
                    <button type="submit" class="btn btn-success">Save</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}