@using IMS.DAL.PrimaryDBContext;
@model IMS.DAL.PrimaryDBContext.AdminSupplier;

@{
    ViewData["Title"] = "Delete Vendor";
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white py-3">
        <div class="d-flex align-items-center">
            <i class="fa fa-exclamation-triangle me-2"></i>
            <h4 class="mb-0">Delete Vendor</h4>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="alert alert-warning d-flex align-items-center" role="alert">
            <i class="fa fa-exclamation-triangle me-2"></i>
            <div>
                <strong>Warning!</strong> Are you sure you want to delete this vendor? This action cannot be undone.
            </div>
        </div>

        <div class="card bg-light">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fa fa-info-circle me-2 text-primary"></i>Vendor Details
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Vendor Name</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-building me-1 text-primary"></i>@Html.DisplayFor(model => model.SupplierName)
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Contact Person</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-user me-1 text-primary"></i>@Html.DisplayFor(model => model.SupplierName)
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Phone Number</label>
                        <div class="form-control-plaintext fw-semibold">
                            <i class="fa fa-phone me-1 text-primary"></i>@Html.DisplayFor(model => model.SupplierPhoneNumber)
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Email Address</label>
                        <div class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.SupplierEmail))
                            {
                                <i class="fa fa-envelope me-1 text-primary"></i>
                                @Html.DisplayFor(model => model.SupplierEmail)
                            }
                            else
                            {
                                <span class="text-muted">No email provided</span>
                            }
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Address</label>
                        <div class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.SupplierAddress))
                            {
                                <i class="fa fa-map-marker-alt me-1 text-primary"></i>
                                @Html.DisplayFor(model => model.SupplierAddress)
                            }
                            else
                            {
                                <span class="text-muted">No address provided</span>
                            }
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">Status</label>
                        <div class="form-control-plaintext">
                            @if (Model.IsDeleted)
                            {
                                <span class="badge bg-success">
                                    <i class="fa fa-check-circle me-1"></i>Active
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="fa fa-times-circle me-1"></i>Inactive
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="SupplierId" />
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                    <i class="fa fa-arrow-left me-1"></i>Back to List
                </a>
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fa fa-trash me-1"></i>Delete Vendor
                </button>
            </div>
        </form>
    </div>
</div>
